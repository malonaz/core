{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "implementation"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "implementation": {
            "type": "string",
            "pattern": "^//[a-zA-Z0-9/_-]+$"
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["type"],
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["grpc_client", "postgres", "firebase_auth", "google_storage", "openai"]
                    },
                    "name": {
                        "type": "string",
                        "pattern": "^[a-z0-9_]+$"
                    },
                    "implementation": {
                        "type": "string",
                        "pattern": "^//[a-zA-Z0-9/_-]+$"
                    },
                    "proto": {
                        "type": "string"
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": { "type": { "const": "grpc_client" } }
                        },
                        "then": {
                            "required": ["proto"]
                        }
                    },
                    {
                        "if": {
                            "properties": { "type": { "const": "postgres" } }
                        },
                        "then": {
                            "required": ["name", "implementation"]
                        }
                    }
                ]
            }
        }
    }
}
