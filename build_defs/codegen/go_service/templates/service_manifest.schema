{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "project", "implementations"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "namespace": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "project": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "job": {
            "type": "boolean"
        },
        "setup": {
            "type": "boolean"
        },
        "configuration": {
            "type": "boolean"
        },
        "implementations": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["name", "implementation"],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9-]+$"
                    },
                    "implementation": {
                        "type": "string",
                        "pattern": "^//[a-zA-Z0-9/_-]+$"
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["type"],
                            "additionalProperties": false,
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": ["grpc_client", "postgres", "firebase_auth", "google_storage", "openai"]
                                },
                                "proto": {
                                    "type": "string",
                                    "pattern": "^//[a-zA-Z0-9/_-]+:(api|chat)$"
                                },
                                "name": {
                                    "type": "string",
                                    "pattern": "^[a-z0-9_]+$"
                                },
                                "implementation": {
                                    "type": "string",
                                    "pattern": "^//[a-zA-Z0-9/_-]+$"
                                }
                            },
                            "allOf": [
                                {
                                    "if": {
                                        "properties": { "type": { "const": "grpc_client" } }
                                    },
                                    "then": {
                                        "required": ["proto"]
                                    }
                                },
                                {
                                    "if": {
                                        "properties": { "type": { "const": "postgres" } }
                                    },
                                    "then": {
                                        "required": ["name", "implementation"]
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "grpc": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "servers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "protos"],
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string",
                                "pattern": "^[a-zA-Z0-9-]+$"
                            },
                            "protos": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": ["proto", "implementation"],
                                    "additionalProperties": false,
                                    "properties": {
                                        "proto": {
                                            "type": "string",
                                            "pattern": "^//[a-zA-Z0-9/_-]+:api$"
                                        },
                                        "implementation": {
                                            "type": "string",
                                            "pattern": "^//[a-zA-Z0-9/_-]+$"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "openAI": {
            "type": "boolean"
        },
        "k8s": {
            "type": "object",
            "additionalProperties": false,
            "required": ["dockerImage"],
            "properties": {
                "dockerImage": {
                    "type": "string",
                    "pattern": "^//[a-zA-Z0-9/_-]+:docker_image$"
                },
                "replicas": {
                    "type": "integer"
                },
                "requestMemory": {
                    "type": "string",
                    "pattern": "^[0-9]+[KMGTPi]+$"
                },
                "requestCpu": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9]+m$"
                        },
                        {
                            "type": "integer"
                        }
                    ]
                },
                "limitMemory": {
                    "type": "string",
                    "pattern": "^[0-9]+[KMGTPi]+$"
                },
                "limitCpu": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9]+m$"
                        },
                        {
                            "type": "integer"
                        }
                    ]
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["name", "secret", "key"],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "secret": {
                                "type": "string"
                            },
                            "key": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
