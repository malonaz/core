{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["name", "project"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "namespace": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "project": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$"
        },
        "job": {
            "type": "boolean"
        },
        "setup": {
            "type": "boolean"
        },
        "configuration": {
            "type": "boolean"
        },
        "grpc": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "servers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "services"],
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string",
                                "pattern": "^[a-zA-Z0-9-]+$"
                            },
                            "interceptors": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["type"],
                                    "additionalProperties": false,
                                    "properties": {
                                        "type": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "services": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "required": ["proto", "manifest"],
                                    "additionalProperties": false,
                                    "properties": {
                                        "proto": {
                                            "type": "string"
                                        },
                                        "manifest": {
                                            "type": "string"
                                        },
                                        "gateway": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "openAI": {
            "type": "boolean"
        },
        "k8s": {
            "type": "object",
            "additionalProperties": false,
            "required": ["dockerImage"],
            "properties": {
                "dockerImage": {
                    "type": "string"
                },
                "replicas": {
                    "type": "integer"
                },
                "requestMemory": {
                    "type": "string",
                    "pattern": "^[0-9]+[KMGTPi]+$"
                },
                "requestCpu": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9]+m$"
                        },
                        {
                            "type": "integer"
                        }
                    ]
                },
                "limitMemory": {
                    "type": "string",
                    "pattern": "^[0-9]+[KMGTPi]+$"
                },
                "limitCpu": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^[0-9]+m$"
                        },
                        {
                            "type": "integer"
                        }
                    ]
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "env": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": ["name", "secret", "key"],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "secret": {
                                "type": "string"
                            },
                            "key": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
