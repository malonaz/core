subinclude(
    "//build_defs:remote",
    "///proto//build_defs:proto",
)

def github_proto_library(
        name:str,
        repo:str,
        revision:str,
        dir:str,
        files:list,
        deps:list=[],
        visibility:list=None,
        protoc_flags:list=[],
        root_dir:str=None,
        additional_context:dict=None,
):
    """
    A github proto library.
    """
    src = github_proto_srcs(
        name = f"_{name}#srcs",
        dir = dir,
        files = files,
        repo = repo,
        revision = revision,
        root_dir = root_dir,
    )

    root_dir_sanitized = "third_party/proto"
    protoc_flag = "-I" + package_name()

    return proto_library(
        name = name,
        srcs = [src],
        root_dir=root_dir_sanitized,
        protoc_flags = protoc_flags + [protoc_flag],
        additional_context = additional_context,
        deps = deps,
        visibility=visibility,
    )

def buf_validate_proto_library(
        name:str = "validate",
        version:str = "v1.0.0",
        visibility:list = None,
        additional_context:dict=None,
):
    """Buf protovalidate library."""
    if additional_context is None:
        additional_context = {}
    additional_context[GO_IMPORT_PATH] = "buf.build/gen/go/bufbuild/protovalidate/protocolbuffers/go/buf/validate"
    return github_proto_library(
        name = name,
        dir = "proto/protovalidate/buf/validate",
        files = ["validate.proto"],
        repo = "bufbuild/protovalidate",
        root_dir="proto/protovalidate",
        revision = version,
        visibility = visibility,
        additional_context = additional_context,
    )

def googleapis_proto_library(
        name:str,
        dir:str,
        files:list,
        revision:str,
        deps:list = [],
        go_import_suffix:str = None,
        visibility:list = None,
        additional_context:dict=None,
):
    """Google APIs proto library."""
    if go_import_suffix is None:
        go_import_suffix = dir.replace("/", "/")
    if additional_context is None:
        additional_context = {}
    additional_context[GO_IMPORT_PATH] = f"google.golang.org/genproto/googleapis/{go_import_suffix}"
    return github_proto_library(
        name = name,
        dir = dir,
        files = files,
        repo = "googleapis/googleapis",
        revision = revision,
        deps = deps,
        visibility = visibility,
        additional_context = additional_context,
    )

def malonaz_proto_library(
        name:str,
        dir:str,
        files:list,
        deps:list = [],
        go_import_suffix:str = None,
        revision:str,
        visibility:list = None,
        additional_context:dict=None,
):
    """Malonaz proto library."""
    if go_import_suffix is None:
        go_import_suffix = dir.replace("/", "__")
    if additional_context is None:
        additional_context = {}
    additional_context[GO_IMPORT_PATH] = f"github.com/malonaz/core/genproto/{go_import_suffix}"
    return github_proto_library(
        name = name,
        dir = dir,
        files = files,
        repo = "malonaz/core",
        revision = revision,
        deps = deps,
        visibility = visibility,
        additional_context = additional_context,
    )
