def go_copy(
        name:str,
        src:str,
):
    return genrule(
        name=name,
        srcs = [src],
        cmd = f"mv $SRCS $OUT",
        out=name,
        requires=["go"],
    )

def with_plugin_support(tool:str):
    _PREFIX = "" if "IS_CORE_REPO" in CONFIG else "///core"
    return _PREFIX + tool
